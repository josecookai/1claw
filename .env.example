# ===========================================
# 1Claw Landing - 外链配置
# ===========================================
# 复制为 .env.local 并填入真实链接。未配置时按钮将禁用，避免跳转到 example.com。

# Stripe 支付（服务端，务必保密）
STRIPE_SECRET_KEY="sk_test_xxx"
STRIPE_WEBHOOK_SECRET="whsec_xxx"
# openclaw-cloud API（Webhook 调用订阅创建）
OPENCLAW_API_URL="http://localhost:3001/api"
INTERNAL_API_SECRET=""
# openclaw-cloud Web 地址（支付前登录串联，落地页需配置）
NEXT_PUBLIC_OPENCLAW_URL="http://localhost:3002"

# 候补名单 / Waitlist
NEXT_PUBLIC_WAITLIST_URL="https://example.com/waitlist"
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""
RESEND_API_KEY=""
WAITLIST_FROM_EMAIL="1Claw <noreply@example.com>"

# 支付链接 - Stripe / Alipay / WeChat Pay 均走 Stripe Checkout（会带上 plan 等参数）
NEXT_PUBLIC_PAY_STRIPE_STARTER_20="/checkout"
NEXT_PUBLIC_PAY_ALIPAY_STARTER_20="/checkout"
NEXT_PUBLIC_PAY_WECHAT_STARTER_20="/checkout"
NEXT_PUBLIC_PAY_USDC_STARTER_20="https://example.com/pay?provider=usdc&tier=starter_20"

NEXT_PUBLIC_PAY_STRIPE_PRO_40="/checkout"
NEXT_PUBLIC_PAY_ALIPAY_PRO_40="/checkout"
NEXT_PUBLIC_PAY_WECHAT_PRO_40="/checkout"
NEXT_PUBLIC_PAY_USDC_PRO_40="https://example.com/pay?provider=usdc&tier=pro_40"

NEXT_PUBLIC_PAY_STRIPE_MAX_200="/checkout"
NEXT_PUBLIC_PAY_ALIPAY_MAX_200="/checkout"
NEXT_PUBLIC_PAY_WECHAT_MAX_200="/checkout"
NEXT_PUBLIC_PAY_USDC_MAX_200="https://example.com/pay?provider=usdc&tier=max_200"
